<?xml version="1.0" encoding="utf-8"?>
<!-- PopupDetailsPerson -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@android:color/background_light"
    android:id="@+id/popupDetailsPerson">
    
      <LinearLayout
	      android:orientation="horizontal"
	      android:layout_width="match_parent"
	      android:layout_height="105dp" >
    
       	      <ImageView       	          
       	          android:id="@+id/imgViewPerson"
       	          android:contentDescription="@string/image_person"
		          android:layout_width="80dp"
		          android:layout_height="80dp"
		          android:layout_marginLeft="4dp"
   			      android:layout_marginTop="14dp"
		          android:src="@drawable/ic_contact_picture_2" />
	      
       	      <LinearLayout
			      android:orientation="vertical"
			      android:layout_marginLeft="6dp"
			      android:layout_marginRight="4dp"
			      android:layout_marginTop="8dp"			      
			      android:layout_width="match_parent"
			      android:layout_height="80dp" >

       	                  <!--<ImageButton       	                    
					        android:id="@+id/btnBack"	
					        android:contentDescription="@string/back"				        
							android:layout_width="50dp"							   			        
		   			        android:layout_marginLeft="180dp"			   			         			       
		   			        android:layout_height="29dp"
						    android:src="@drawable/sym_keyboard_feedback_return" />-->
			      
					      <TextView 
					          android:id="@+id/tPersonFamilyname"
					          android:layout_width="wrap_content"
					          android:layout_height="25dp"
					          android:textSize="21sp"
					          android:text="@string/family_name"
			   			      android:layout_marginBottom="3dp"
			   			       />  
			   			      
					      <TextView 
					          android:id="@+id/tPersonGivenname"
					          android:layout_width="wrap_content"
					          android:layout_height="25dp"
					          android:textSize="21sp"
					          android:text="@string/given_name"
					          android:layout_marginBottom="3dp"
			   			      />			      
			</LinearLayout>

      </LinearLayout>
      
      <Button
          android:id="@+id/btnPhone"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:text="@string/phone" />
      <Button
          android:id="@+id/btnEmail"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:text="@string/email" />
      <Button
          android:id="@+id/btnFacebookChat"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:text="@string/facebook_chat" />
</LinearLayout>